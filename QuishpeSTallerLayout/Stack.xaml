             x:Class="QuishpeSTallerLayout.Stack"
             Title="Stack">

    <StackLayout Padding="20" Spacing="15">
        
        <Label Text="Stheeven"
               FontSize="60"
               FontFamily="Arial"
               HorizontalOptions="Center" />

       
        <Label Text="Alexander"
               FontSize="30"
               FontFamily="Courier New"
               HorizontalOptions="Center" />

       
        <Label Text="Quishpe"
               FontSize="20"
